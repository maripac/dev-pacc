<div class="container-fluid">
<div class="module">



	<div class="row">
			
		<div class="col-lg-12">
			<h2 class="slogan">{{page.slogan}}</h2>
		</div>

	</div><!-- // .row -->

	<div class="row utopia">
		<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 col-xxs-12">
			<div class="utopia">


			{{>utopia}}
			
			</div>
		</div>

		{{#each page.quotes}}
		{{#is this.author 'Michel Foucault'}}
		<div class="quote_common 
		col-lg-offset-1 col-lg-5 col-md-offset-1 col-md-5 col-sm-6 col-xs-6 col-xxs-12">
			<q>{{ this.quote }}</q> 
		</div>	        
		{{/is}}
		{{/each}}
	</div><!-- // .row -->

	




	

</div><!-- // .module-->
</div>





